   <div class="row">
      <div class="col-md-6">

<h1>BLOCITOFF</h1>


<% if user_signed_in? %>



        
       <h2>Hello <%= current_user.email %> </h2>
        <% avatar_url = current_user.avatar_url(current_user, 42) %>
        <% unless avatar_url.nil? %>
          
          <div class="media-left">
            <%= image_tag avatar_url, class: 'media-object' %>
          </div>
          
          <h2>you're signed in. Welcome!</h2>
         
        <% end %>
        
           <%= render partial: 'items/form'%>
         
        
 
    <p>
        <%= link_to('Logout', destroy_user_session_path) %>
    </p>
   
        
        
       </div>
     <div class="col-md-6">
         <h2>Your Items</h2>
       <table class="table table-hover table-bordered">
           <thead>
             <tr>
               <th class="text-left">Item Description</th>
               <th class="text-left">Days Left</th>
               <th class="text-left">Completed</th>
             </tr>
           </thead>
           <tbody>
                <%= render current_user.items %>
            </tbody>
        </table>
     </div>
  </div>
     

<% else %>
  <li>
  <%= link_to('Login', new_user_session_path)  %>  
  </li>
<% end %>


